<h2 class="font-extralight">Forms</h2>
<%= form_with url: "/", method: :get do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.select :desired_attribute, %w(Mr Miss Mrs Other) %>
  </p>
  <p>
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </p>
  <p>
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </p>
  <p>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </p>
  <p>
    <%= form.label :telephone %>
    <%= form.telephone_field :telephone %>
  </p>
  <div data-controller="character-counter">
    <p>
      <%= form.label :message %>
      <%= form.text_area :message, rows: 6, data: {character_counter_target: :input} %>
    </p>
    <p class="-mt-5 flex md:w-3/5 justify-end text-white font-light text-sm">
      <span class="mr-1 text-[18px]" data-character-counter-target="counter"></span> characters
    </p>
  </div>
  <p>
    <%= form.label :url %>
    <%= form.url_field :url %>
  </p>
  <p>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </p>
  <p>
    <%= form.label :datetime %>
    <%= form.datetime_field :datetime %>
  </p>
  <p>
    <%= form.label :month %>
    <%= form.month_field :month %>
  </p>
  <p>
    <%= form.label :week %>
    <%= form.week_field :week %>
  </p>
  <p>
    <%= form.label :time %>
    <%= form.time_field :time %>
  </p>
  <p>
    <%= form.label :price %>
    <%= form.number_field :price, in: 1.0 .. 20.0, step: 0.5 %>
  </p>
  <p>
    <%= form.label :color %>
    <%= form.color_field :color, class: "h-12" %>
  </p>
  <p>
    <%= form.label :range %>
    <%= form.range_field :range, in: 1.0 .. 20.0, step: 0.5 %>
  </p>
  <%= field_set_tag "Which are better cats or corgis?", class: 'radio-group' do %>
    <p>
      <%= form.radio_button :animal, "Cats" %>
      <%= form.label :animal_cats, "Cats" %>
    </p>
    <p>
      <%= form.radio_button :animal, "Corgis" %>
      <%= form.label :animal_corgis, "Corgis" %>
    </p>
  <% end %>
  <%= field_set_tag "Age:", class: 'radio-group' do %>
    <p>
      <%= form.radio_button :age, "child" %>
      <%= form.label :age_child, "I am younger than 21" %>
    </p>
    <p>
      <%= form.radio_button :age, "adult" %>
      <%= form.label :age_adult, "I am over 21" %>
    </p>
    <p>
      <%= form.radio_button :age, "eternal", disabled: true %>
      <%= form.label :age_eternal, "I am imortal" %>
    </p>
  <% end %>
  <p>
    <%= form.label :select_one_or_more %>
    <% cities = [
			{id: 1, name: "Berlin"},
			{id: 2, name: "Chicago"},
			{id: 3, name: "Madrid"},
			{id: 4, name: "Cape Town"}
		].collect { |u| [u[:name], u[:id]] } %>
    <%= select_tag :city,
			options_for_select(cities),
			multiple: true %>
  </p>
  <div class="checkbox-group">
    <p>
      <%= form.check_box :agree_to_terms %>
      <label for="agree_to_terms"> I agree to the <a href="#">terms and conditions</a></label>
    </p>
  </div>
  <%= form.button %>
  <%= form.button "Clear" %>
  <%= form.button "Disabled", disabled: true %>
<% end %>
